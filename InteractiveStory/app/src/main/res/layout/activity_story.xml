<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_story"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context="leonardo.com.interactivestory.ui.StoryActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/page0"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:id="@+id/storyImageView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="On your return trip from studying Saturn's rings, you hear a distress signal that seems to be coming from the surface of Mars. It's strange because there hasn't been a colony there in years. Even stranger, it's calling you by name: Help me, %1$s, you're my only hope."
        android:layout_below="@+id/storyImageView"
        android:layout_alignParentLeft="@+id/storyImageView"
        android:layout_alignParentStart="@+id/storyImageView"
        android:id="@+id/storyTextView"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@android:color/black"/>

    <Button
        android:text="Stop and Investigate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/choiceButton2"
        android:background="@android:color/background_light"
        android:textColor="#FF3A8AEC"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/choiceButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/choiceButton1"
        android:text="Continue Home to Earth"
        android:background="@android:color/background_light"
        android:textColor="#FF3A8AEC"/>
</RelativeLayout>
